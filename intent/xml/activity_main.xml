<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Student Details"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Name"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/etMark1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mark 1 (0-100)"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etMark2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mark 2 (0-100)"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etMark3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mark 3 (0-100)"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etMark4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mark 4 (0-100)"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:onClick="onCalculateClicked"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
